<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.fluper.newsapp.authentication.SignUpFragment">

    <RelativeLayout
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/signup_fb_btn"
            android:background="@drawable/fb"
            android:layout_marginTop="@dimen/dp_32"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:id="@+id/view_linear_layout"
            android:layout_below="@+id/signup_fb_btn"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.example.fluper.newsapp.appUtils.MyTextView
                android:id="@+id/tv_or_signup"
                android:text="@string/or"
                android:textSize="@dimen/dp_18"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:background="@color/colorPink"
                android:alpha=".6"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_toRightOf="@+id/tv_or_signup"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>

            <View
                android:background="@color/colorPink"
                android:alpha=".6"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_toLeftOf="@+id/tv_or_signup"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
        </RelativeLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/signup_email"
            android:layout_below="@+id/view_linear_layout"
            android:layout_marginTop="@dimen/dp_22"
            android:hint="Email Id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.example.fluper.newsapp.appUtils.MyEditText
                android:id="@+id/email_signup"
                android:textCursorDrawable="@color/colorbutton"
                android:textColorHint="@color/colorbutton"
                android:inputType="textEmailAddress"
                android:background="@android:color/transparent"
                android:singleLine="true"
                android:textColor="@color/colorbutton"
                android:textSize="@dimen/dp_14"
                android:paddingBottom="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>


        <View
            android:background="@color/colorPink"
            android:id="@+id/email_view"
            android:layout_below="@+id/signup_email"
            android:layout_width="match_parent"
            android:alpha=".6"
            android:layout_height="1dp"></View>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/signup_password"
            android:layout_below="@+id/email_view"
            android:layout_marginTop="@dimen/dp_16"
            android:hint="Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.example.fluper.newsapp.appUtils.MyEditText
                android:id="@+id/password_signup"
                android:textCursorDrawable="@color/colorbutton"
                android:textColorHint="@color/colorbutton"
                android:inputType="textPassword"
                android:textColor="@color/colorbutton"
                android:background="@android:color/transparent"
                android:singleLine="true"
                android:textSize="@dimen/dp_14"
                android:paddingBottom="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>


        <View
            android:background="@color/colorPink"
            android:id="@+id/password_view"
            android:layout_below="@+id/signup_password"
            android:layout_width="match_parent"
            android:alpha=".6"
            android:layout_height="1dp"></View>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/signup_confirm_password"
            android:layout_below="@+id/password_view"
            android:layout_marginTop="@dimen/dp_16"
            android:hint="Confirm Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.example.fluper.newsapp.appUtils.MyEditText
                android:id="@+id/c_password_signup"
                android:inputType="textPassword"
                android:textColor="@color/colorbutton"
                android:textCursorDrawable="@color/colorbutton"
                android:textColorHint="@color/colorbutton"
                android:singleLine="true"
                android:background="@android:color/transparent"
                android:textSize="@dimen/dp_14"
                android:paddingBottom="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <View
            android:background="@color/colorPink"
            android:id="@+id/confiem_password_view"
            android:layout_below="@+id/signup_confirm_password"
            android:layout_width="match_parent"
            android:alpha=".6"
            android:layout_height="1dp"></View>
    </RelativeLayout>
    <Button
        android:id="@+id/signup_btn"
        android:background="#11998f"
        android:layout_alignParentBottom="true"
        android:text="Sign Up"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"
        android:textSize="@dimen/sp_15"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

</RelativeLayout>
</layout>