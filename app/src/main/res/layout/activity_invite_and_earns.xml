<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fluper.newsapp.profile.InviteAndEarnsActivity">

    <include layout="@layout/header_tool_layout"
        android:id="@+id/include_tool_invite_and_earns"></include>

    <RelativeLayout
        android:id="@+id/earns_header_layout"
        android:layout_below="@+id/include_tool_invite_and_earns"
        android:background="@drawable/invite_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/total_earning_text_box"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_20"
            android:text="$0.00"
            android:gravity="center"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="8dp"
            android:layout_marginRight="270dp"
            android:textSize="@dimen/dp_20"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/custom_doted_box_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/total_earning_text"
            android:layout_below="@+id/total_earning_text_box"
            android:textSize="@dimen/dp_14"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="10dp"
            android:text="Total Earning"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />




    </RelativeLayout>

    <TextView
        android:id="@+id/share_link_text"
        android:layout_below="@+id/earns_header_layout"
        android:textSize="@dimen/dp_24"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="@dimen/dp_20"
        android:text="Share your link &amp; get $25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/share_link_description_text"
        android:layout_below="@+id/share_link_text"
        android:textSize="@dimen/dp_16"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="6dp"
        android:lineSpacingExtra="@dimen/dp_4"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="@dimen/dp_20"
        android:text="@string/app_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/saveBtnAddNewCard"
        android:layout_below="@+id/share_link_description_text"
        android:background="@drawable/buy_now_btn_layout"
        android:text="Share your link"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"
        android:textSize="@dimen/sp_15"
        android:layout_width="match_parent"
        android:layout_height="50dp" />


</RelativeLayout>
</layout>