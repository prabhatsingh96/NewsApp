<layout xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fluper.newsapp.home.SearchFragment">

    <com.example.fluper.newsapp.appUtils.MyEditText
        android:id="@+id/search_box"
        android:layout_marginTop="16dp"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:padding="@dimen/dp_15"
        android:hint="Search magzines here..."
        android:gravity="center"
        android:background="@drawable/search_box_drawable_layout"
        android:drawableRight="@drawable/search"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <TextView
        android:id="@+id/heading_magzine_text"
        android:layout_below="@+id/search_box"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="@dimen/dp_16"
        android:text="Magazines"
        android:textSize="@dimen/dp_22"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/search_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heading_magzine_text"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="12dp"
        android:nestedScrollingEnabled="false"
        android:orientation="horizontal" />

</RelativeLayout>
</layout>