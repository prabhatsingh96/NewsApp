<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.fluper.newsapp.authentication.ForgotActivity">

        <RelativeLayout
            android:id="@+id/tool_relative_forgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/include_forgot_layout"
                layout="@layout/header_tool_layout"></include>


        <TextView
            android:id="@+id/forgot_register_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/include_forgot_layout"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="@dimen/dp_30"
            android:text="Please enter your registered Email Id"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dp_20"
            android:textStyle="bold" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/email_forgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/forgot_register_email"
            android:textSize="@dimen/dp_15"
            android:layout_marginTop="30dp">

            <com.example.fluper.newsapp.appUtils.MyEditText
                android:id="@+id/email_forgot_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:hint="Enter Email"
                android:focusable="auto"
                android:textCursorDrawable="@color/colorbutton"
                android:textColorHint="@color/colorbutton"
                android:textColor="@color/colorbutton"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@android:color/transparent"
                android:inputType="textEmailAddress"
                android:paddingBottom="@dimen/dp_5"
                android:textSize="@dimen/dp_15" />
        </android.support.design.widget.TextInputLayout>
        <View
            android:id="@+id/view_forgot_email"
            android:layout_below="@+id/email_forgot"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginLeft="40dp"
            android:background="@color/colorPink"
            android:alpha=".6"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>


        <Button
            android:id="@+id/submit_forgot"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorbutton"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_15" />

    </RelativeLayout>
    </RelativeLayout>
</layout>