<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fluper.newsapp.subscription.ArticleNameReadMoreActivity">


    <include layout="@layout/header_tool_layout"
        android:id="@+id/include_article_name_tool"></include>

    <TextView
        android:id="@+id/marget_wapler_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include_article_name_tool"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="Margaret Wappler"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/dp_13" />


    <TextView
        android:id="@+id/heading_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/marget_wapler_text"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_120"
        android:layout_marginTop="8dp"
        android:text="Silence, Please, I'm Heading"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/dp_23"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heading_text"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="10dp"
        android:text="USA, English, January 20, 2018"
        android:textColor="@color/colorPink"
        android:textSize="13dp" />


    <TextView
        android:id="@+id/description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_text"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="10dp"
        android:text="Description"
        android:textColor="@color/colorPrimary"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/decription_containt_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description_text"
        android:layout_marginLeft="20dp"
        android:lineSpacingExtra="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        android:text="@string/lorem_ipsum_dolor_sit_amet_consectetur_adipicing_elit_sed_to_euismod_tempor_incididunt_ut_labore_it_dolor_read_more"
        android:textColor="@color/colorPrimary"
        android:textSize="15dp" />


    <View
        android:layout_alignParentBottom="true"
        android:background="@drawable/shadow"
        android:elevation="@dimen/dp_2"
        android:layout_marginBottom="@dimen/dp_50"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/email"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginLeft="20dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <ImageView
            android:id="@+id/add_text"
            android:src="@drawable/add"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/Aa_text"
            android:layout_toLeftOf="@+id/add_text"
            android:layout_marginBottom="@dimen/dp_15"
            android:text="Aa"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dp_16"
            android:layout_marginRight="14dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <ImageView
            android:id="@+id/minus_iv"
            android:src="@drawable/minus"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_toLeftOf="@+id/Aa_text"
            android:layout_marginRight="14dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </RelativeLayout>





</RelativeLayout>
</layout>