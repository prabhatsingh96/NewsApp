<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="@dimen/dp_12"
        android:id="@+id/cardview_payment_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_payment_success"
                android:gravity="center"
                android:text="Payment Successful"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dp_16"
                android:background="@color/colorBottomSheet"
                android:paddingTop="9dp"
                android:paddingBottom="@dimen/dp_9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <ImageView
                android:id="@+id/iv_payment_success"
                android:layout_below="@+id/tv_payment_success"
                android:layout_centerHorizontal="true"
                android:src="@drawable/sucessfully"
                android:layout_marginTop="@dimen/dp_22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_transction_text"
                android:layout_below="@+id/iv_payment_success"
                android:gravity="center"
                android:text="Transaction id"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/dp_12"
                android:paddingTop="9dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_transction_id"
                android:layout_below="@+id/tv_transction_text"
                android:gravity="center"
                android:text="#0123456789"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dp_18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tv_okay"
                android:clickable="true"
                android:layout_below="@+id/tv_transction_id"
                android:gravity="center"
                android:text="Okay"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginBottom="@dimen/dp_10"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dp_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>



</RelativeLayout>
</layout>