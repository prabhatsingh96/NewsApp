<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="@dimen/dp_290"
        android:layout_height="@dimen/dp_250">


        <!-- <android.support.v7.widget.CardView
             android:id="@+id/card_view_product"
             app:cardCornerRadius="10dp"
             android:layout_marginRight="@dimen/dp_12"
             android:layout_width="wrap_content"
             android:layout_height="200dp" >-->

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_product"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_20"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="@dimen/dp_290"
                android:layout_height="@dimen/dp_250"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/releted_search_image"
                    android:src="@drawable/related_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


                <TextView
                    android:id="@+id/releted_recycler_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:text="Stop Being A Work Martyr"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/dp_16"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/releted_recycler_text_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:text="Stop Being A Work Martyr"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/dp_14" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</layout>