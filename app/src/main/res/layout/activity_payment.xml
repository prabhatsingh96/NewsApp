<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fluper.newsapp.payment.PaymentActivity">

    <include layout="@layout/header_tool_layout"
        android:id="@+id/include_header_tool_payments"></include>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/include_header_tool_payments"
        android:id="@+id/payment_recycler_list"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="20dp"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>


    <RelativeLayout
        android:layout_marginBottom="20dp"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/float_add_btn"
        android:src="@drawable/float_add"
       android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>
</layout>