<layout
xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.fluper.newsapp.authentication.LogInFragment">

    <RelativeLayout
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <Button
        android:id="@+id/login_fb_btn"
        android:background="@drawable/fb"
        android:layout_marginTop="@dimen/dp_32"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/view_linear_layout"
        android:layout_below="@+id/login_fb_btn"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.example.fluper.newsapp.appUtils.MyTextView
            android:id="@+id/tv_or_login"
            android:text="@string/or"
            android:textSize="@dimen/dp_18"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:background="@color/colorPink"
            android:alpha=".5"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_toRightOf="@+id/tv_or_login"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>

        <View
            android:background="@color/colorPink"
            android:alpha=".5"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_toLeftOf="@+id/tv_or_login"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
    </RelativeLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/login_email"
            android:layout_below="@+id/view_linear_layout"
            android:layout_marginTop="@dimen/dp_22"
            android:hint="Email Id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


    <com.example.fluper.newsapp.appUtils.MyEditText
        android:id="@+id/login_emaill"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:textSize="@dimen/dp_14"
        android:textColor="@color/colorGrey"
        android:paddingTop="@dimen/dp_4"
        android:textCursorDrawable="@color/colorbutton"
        android:textColorHint="@color/colorbutton"
        android:paddingBottom="@dimen/dp_5"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <View
            android:id="@+id/email_view"
            android:layout_below="@+id/login_email"
            android:background="@color/colorPink"
            android:layout_width="match_parent"
            android:alpha=".6"
            android:layout_height="1dp"></View>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/login_password"
            android:layout_below="@+id/email_view"
            android:layout_marginTop="@dimen/dp_18"
            android:hint="Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.example.fluper.newsapp.appUtils.MyEditText
                android:id="@+id/login_passwordd"
                android:inputType="textPassword"
                android:singleLine="true"
                android:paddingTop="@dimen/dp_4"
                android:textColor="@color/colorGrey"
                android:textCursorDrawable="@color/colorbutton"
                android:textColorHint="@color/colorbutton"
                android:textSize="@dimen/dp_14"
                android:background="@android:color/transparent"
                android:paddingBottom="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>


        <View
            android:id="@+id/password_view"
            android:background="@color/colorPink"
            android:layout_below="@+id/login_password"
            android:layout_width="match_parent"
            android:alpha=".6"
            android:layout_height="1dp"></View>

    <Button
        android:id="@+id/forgot_btn"
        android:layout_below="@+id/password_view"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_7"
        android:background="@android:color/transparent"
        android:text="Forgot Password?"
        android:textSize="@dimen/dp_15"
        android:textColor="@color/colorPrimary"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </RelativeLayout>
    <Button
        android:id="@+id/loginBtn"
        android:background="#11998f"
        android:layout_alignParentBottom="true"
        android:text="Login"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"
        android:textSize="@dimen/sp_15"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</RelativeLayout>

</layout>