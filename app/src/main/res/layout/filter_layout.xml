<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

 <RelativeLayout
     android:background="@color/colorBottomSheet"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
     <TextView
         android:id="@+id/filter_text"
         android:text="Filter"
         android:textStyle="bold"
         android:textColor="@color/colorPrimary"
         android:textSize="@dimen/dp_16"
         android:paddingTop="@dimen/dp_10"
         android:paddingLeft="@dimen/dp_15"
         android:paddingBottom="@dimen/dp_10"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"></TextView>
     <TextView
         android:id="@+id/apply_text"
         android:layout_alignParentRight="true"
         android:text="Apply"
         android:textColor="@color/colorPrimary"
         android:textSize="@dimen/dp_14"
         android:paddingTop="@dimen/dp_10"
         android:paddingLeft="@dimen/dp_15"
         android:paddingBottom="@dimen/dp_10"
         android:paddingRight="@dimen/dp_15"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"></TextView>
    <!-- <View
         android:layout_below="@+id/filter_text"
         android:background="@color/colorPink"
         android:alpha=".6"
         android:layout_width="match_parent"
         android:layout_height="1dp"></View>-->
 </RelativeLayout>

    <LinearLayout
        android:id="@+id/top_seller_linear_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/top_seller_text"
            android:text="Top Seller"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dp_16"
            android:padding="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <CheckBox
            android:id="@+id/cb_top_seller"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="15dp"
            android:paddingRight="14dp"
            android:button="@drawable/custom_cheack_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_below="@+id/top_seller_text"
        android:background="@color/colorPink"
        android:alpha=".6"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/featured_text"
            android:text="Featured"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dp_16"
            android:padding="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <CheckBox
            android:id="@+id/cb_featured"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="15dp"
            android:paddingRight="14dp"
            android:button="@drawable/custom_cheack_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_below="@+id/featured_text"
        android:background="@color/colorPink"
        android:alpha=".6"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/magazines_text"
            android:text="Magazines"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dp_16"
            android:padding="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <CheckBox
            android:id="@+id/cb_magazines"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="15dp"
            android:paddingRight="14dp"
            android:button="@drawable/custom_cheack_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <View
        android:layout_below="@+id/magazines_text"
        android:background="@color/colorPink"
        android:alpha=".6"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/new_arrivals_text"
            android:text="New Arrivals"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dp_16"
            android:padding="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <CheckBox
            android:id="@+id/cv_new_arrivals"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="15dp"
            android:paddingRight="14dp"
            android:button="@drawable/custom_cheack_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <View
        android:layout_below="@+id/new_arrivals_text"
        android:background="@color/colorPink"
        android:alpha=".6"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>



</LinearLayout>
</layout>