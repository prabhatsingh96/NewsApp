<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.fluper.newsapp.home.SaveArticleDiscription">


        <RelativeLayout
            android:id="@+id/tool_relati_description"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/details_img">

            <ImageView
                android:id="@+id/back_btn_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="10dp"
                android:src="@drawable/back_black"
                android:tint="@color/colorPrimaryDark" />

        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_marginTop="205dp"
            android:src="@drawable/share" />

        <TextView
            android:id="@+id/marget_wapler_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tool_relati_description"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="Margaret Wappler"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dp_13" />


        <TextView
            android:id="@+id/heading_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/marget_wapler_text"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_120"
            android:layout_marginTop="8dp"
            android:text="Silence, Please, I'm Heading"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dp_20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/heading_text"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="5dp"
            android:text="USA, English, January 20, 2018"
            android:textColor="@color/colorPink"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/try_for_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/heading_text"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/try_for_free"
            android:text="Try For Free"
            android:textColor="@color/colorPurple"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date_text"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="15dp"
            android:text="Description"
            android:textColor="@color/colorPrimary"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/decription_containt_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description_text"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_12"
            android:lineSpacingExtra="@dimen/dp_4"
            android:text="@string/lorem_ipsum_dolor_sit_amet_consectetur_adipicing_elit_sed_to_euismod_tempor_incididunt_ut_labore_it_dolor_read_more"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp" />

        <RelativeLayout
            android:id="@+id/botton_article_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/article_releted_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/up_arrow"
                android:text="Related Articles"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/dp_15" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tryfree_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </RelativeLayout>


    </RelativeLayout>
</layout>