<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fluper.newsapp.profile.SettingActivity">

    <include layout="@layout/header_tool_layout"
        android:id="@+id/inlude_tool_settting">
    </include>

    <LinearLayout
        android:id="@+id/profile_layout_detail"
        android:orientation="vertical"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_below="@id/inlude_tool_settting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/rel_layout_mode"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.example.fluper.newsapp.appUtils.MyTextView
            android:id="@+id/mode"
            android:text="Font Size"
            android:textSize="16dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--<android.support.v7.widget.SwitchCompat
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content" />-->
        <TextView
            android:text="12"
            android:textSize="16dp"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentRight="true"
            android:layout_marginRight="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
        <View
            android:id="@+id/view_mode"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPink"
            android:alpha=".6"></View>



        <RelativeLayout
            android:id="@+id/rel_layout_vibration"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.example.fluper.newsapp.appUtils.MyTextView
                android:id="@+id/vibration"
                android:text="Vibration"
                android:textSize="16dp"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.SwitchCompat
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content" />

        </RelativeLayout>
        <View
            android:id="@+id/view_vibration"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPink"
            android:alpha=".6"></View>


        <com.example.fluper.newsapp.appUtils.MyTextView
            android:id="@+id/rate_app"
            android:text="Rate App"
            android:textSize="16dp"
            android:layout_marginTop="12dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:id="@+id/view_payments"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPink"
            android:alpha=".6"></View>

        <com.example.fluper.newsapp.appUtils.MyTextView
            android:id="@+id/send_feedback"
            android:text="Send Feedback"
            android:textSize="16dp"
            android:layout_marginTop="12dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:id="@+id/view_feedback"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPink"
            android:alpha=".6"></View>

        <com.example.fluper.newsapp.appUtils.MyTextView
            android:id="@+id/privacy_Policy"
            android:text="Privacy Policy"
            android:textSize="16dp"
            android:layout_marginTop="12dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:id="@+id/privacy"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPink"
            android:alpha=".6"></View>

        <com.example.fluper.newsapp.appUtils.MyTextView
            android:id="@+id/about_us"
            android:text="Send Feedback"
            android:textSize="16dp"
            android:layout_marginTop="12dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:id="@+id/about"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPink"
            android:alpha=".6"></View>


        <com.example.fluper.newsapp.appUtils.MyTextView
            android:id="@+id/terms"
            android:text="Terms &amp; Conditions"
            android:textSize="16dp"
            android:layout_marginTop="12dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:id="@+id/term_view"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPink"
            android:alpha=".6"></View>


        <com.example.fluper.newsapp.appUtils.MyTextView
            android:id="@+id/logout"
            android:text="Logout"
            android:textSize="16dp"
            android:layout_marginTop="12dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:id="@+id/logout_view"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPink"
            android:alpha=".6"></View>




    </LinearLayout>





</RelativeLayout>
</layout>
