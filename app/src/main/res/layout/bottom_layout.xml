<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view_bottomm"
        android:elevation="@dimen/dp_2"
        android:background="@drawable/shadow"
        android:layout_above="@+id/rl_footer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5" />
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="5"
        android:id="@+id/rl_footer"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_65"
        android:layout_alignParentBottom="true">


        <RelativeLayout
            android:id="@+id/rel_home"
               android:layout_weight="1"
            android:gravity="center"
               android:layout_width="0dp"
               android:layout_height="wrap_content">
            <View
                android:id="@+id/home_view_line"
                android:visibility="gone"
                android:background="@color/colorPurple"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2">

            </View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

        <ImageView
            android:id="@+id/iv_home"
            android:layout_width="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_height="wrap_content"
            android:src="@drawable/bottom_home_de" />
        <TextView
            android:id="@+id/home_text"
            android:layout_below="@+id/iv_home"
            android:text="HOME"
            android:textColor="@color/colorPrimary"
            android:textSize="13dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" /></RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rel_search"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/search_view_line"
                android:visibility="gone"
                android:background="@color/colorPurple"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
            <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_8"
            android:src="@drawable/search" />
        <TextView
            android:id="@+id/search_text"
            android:layout_below="@+id/iv_search"
            android:text="SEARCH"
            android:textColor="@color/colorPrimary"
            android:textSize="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" /></RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rel_bookmark"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/bookmark_view_line"
                android:visibility="gone"
                android:background="@color/colorPurple"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
            <ImageView
            android:id="@+id/iv_bookmark"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_25"
            android:src="@drawable/bottom_bookmark_de" />
        <TextView
            android:id="@+id/bookmark_text"
            android:layout_below="@+id/iv_bookmark"
            android:text="BOOKMARK"
            android:textColor="@color/colorPrimary"
            android:textSize="13dp"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" /></RelativeLayout>
</RelativeLayout>
        <RelativeLayout
            android:id="@+id/rel_saved"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/saved_view_line"
                android:visibility="gone"
                android:background="@color/colorPurple"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
            android:id="@+id/iv_saved"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14"
            android:src="@drawable/bottom_download_de" />

        <TextView
            android:id="@+id/saved_text"
            android:layout_below="@+id/iv_saved"
            android:text="SAVED"
            android:textColor="@color/colorPrimary"
            android:textSize="13dp"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" /></RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rel_profile"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/profile_view_line"
                android:visibility="gone"
                android:background="@color/colorPurple"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_height="wrap_content"
            android:src="@drawable/bottom_profile_de" />
        <TextView
            android:id="@+id/profile_text"
            android:layout_below="@+id/iv_profile"
            android:text="PROFILE"
            android:textColor="@color/colorPrimary"
            android:textSize="13dp"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" /></RelativeLayout>

        </RelativeLayout>
       <!-- <View
            android:id="@+id/v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></View>-->

    </LinearLayout>

</RelativeLayout>
</layout>