<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fluper.newsapp.home.BestSellerActivity">


    <include layout="@layout/header_tool_layout"
        android:id="@+id/include_tool_best_seller"></include>

    <ScrollView
        android:layout_marginTop="18dp"
        android:layout_below="@+id/include_tool_best_seller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/best_seller_squre_recycler_view"
        android:layout_marginLeft="@dimen/dp_20"
        android:nestedScrollingEnabled="false"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    </android.support.v7.widget.RecyclerView>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/best_seller_rectangle_recycler_view"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_21"
        android:layout_width="match_parent"
        android:nestedScrollingEnabled="false"
        android:layout_height="wrap_content"
        android:layout_below="@+id/best_seller_squre_recycler_view"
        >
    </android.support.v7.widget.RecyclerView>




        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
</layout>