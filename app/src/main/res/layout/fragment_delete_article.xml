<layout xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fluper.newsapp.home.DeleteArticleFragment">


    <include layout="@layout/delete_header_tool_layout"
        android:id="@+id/include_header_tool_layout"></include>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/delete_recycle_view"
        android:layout_below="@+id/include_header_tool_layout"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
</layout>